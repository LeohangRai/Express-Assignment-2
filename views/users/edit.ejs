<div class="container">
    <h1>Edit user</h1>
    <div class="row p-4">
        <div class="col-md-10">
            <form
                action="/users/edit/<%= user._id %>?_method=PUT"
                method="post"
            >
                <div class="form-group">
                    <label for="title">Username</label>
                    <input
                        type="text"
                        name="username"
                        id="username"
                        class="form-control"
                        placeholder="Enter username"
                        value="<%= user.username %>"
                    />
                </div>

                <div class="form-group">
                    <label for="email">Email address</label>
                    <input
                        type="email"
                        class="form-control"
                        id="email"
                        name="email"
                        value="<%= user.email %>"
                        placeholder="Enter email"
                        required
                    />
                </div>

                <div class="form-group">
                    <label for="email">Password</label>
                    <input
                        type="password"
                        class="form-control"
                        id="password"
                        name="password"
                        value="<%= user.password %>"
                        placeholder="Enter password"
                        required
                    />
                </div>

                <div class="form-group">
                    <label for="address">Address</label>
                    <input
                        type="text"
                        class="form-control"
                        id="address"
                        name="address"
                        value="<%= user.address %>"
                        placeholder="Enter address"
                        required
                    />
                </div>

                <div class="form-group">
                    <label for="phone">Phone number</label>
                    <input
                        type="number"
                        class="form-control"
                        id="phone"
                        name="phone"
                        value="<%= user.phone %>"
                        placeholder="Enter Phone"
                        required
                    />
                </div>

                <button class="btn btn-outline-success btn-md" type="submit">
                    Update
                </button>
            </form>
        </div>
    </div>
</div>
